# -*- coding:utf-8 -*-

import re
from datetime import datetime, timezone, timedelta

def to_timestamp(dt_str, tz_str):
	try:
		dt_datetime = datetime.strptime(dt_str,'%Y-%m-%d %H:%M:%S')
		tz	= re.match(r'UTC([\+\-][0-9]{1,2}):([0-9]{2})',tz_str)
		tz_timezone = timezone(timedelta(hours=int(tz.group(1))))
		tz_datetime = dt_datetime.replace(tzinfo=tz_timezone)
		return tz_datetime.timestamp()
	except Exception as e:
		print(e)
	return None



# 测试:
t1 = to_timestamp('2015-6-1 08:10:30', 'UTC+7:00')
assert t1 == 1433121030.0, t1

t2 = to_timestamp('2015-5-31 16:10:30', 'UTC-09:00')
assert t2 == 1433121030.0, t2

print('ok')


